.card
  .card.horizontal
    .card-image
      img(src='http://lorempixel.com/225/323/nature')
    .card-stacked
      .card-content
        span.card-title {{manga.title}}
        .volumes("*ngIf"="manga.volumes") Volumes : {{manga.volumes}}
  .card-content
    span.card-title.activator.grey-text.text-darken-4
      | A piece of abstract truncated...
      i.material-icons.right more_vert
    p
      a(href='#') This is a link
  .card-reveal
    span.card-title.grey-text.text-darken-4
      | {{manga.title}}
      i.material-icons.right close
    p {{manga.abstract}}

